{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "angular",
        "pattern": {
          "regexp": "^\\[(.*?)\\](.*)$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Browser application bundle generation complete",
          "endsPattern": "Failed to compile"
        }
      }
    }
  ]
}